= form_for @question do |f|
  = render 'shared/errors', resource: @question

  .field
    = f.label :data_type
    = f.text_field :data_type
  .field
    = f.label :body
    = f.text_field :body
  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :description
    = f.text_area :description
  .actions
    = f.submit 'Save'
