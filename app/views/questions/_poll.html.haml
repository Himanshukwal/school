-if user_signed_in?
  -q = current_user.question
  -if q.present?
    .polls{'data-id' => q.id}
      -if q.present?
        %h2 Poll:#{q.title}
        %p=q.description
        -if q.body.match(";")
          -answers = q.body.split(";")
          =form_for current_user.answers.new, :remote => true do |f|
            =f.hidden_field :question_id, :value => q.id
            %ul
              -answers.each do |a|
                -if a != "!"
                  %li
                    =f.radio_button(:text, a)
                    =a
            =f.submit "Vote", :class => "small_button"
  -else
    .polls
      %h2 Polls
      Please watch the statistics

-else
  .polls
    %h2 Polls
    Please
    %a{:href => "#", "data-reveal-id" => "LoginModal"} sign in
    , baby!

