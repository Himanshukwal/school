= form_for @lesson do |f|
  = render 'shared/errors', resource: @lesson

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :description
    = f.text_area :description
  .time-field
    =f.label :date
    =f.datetime_select :date
  .field
    = f.label :course_id
    = f.number_field :course_id
  .field
    = f.label :slug
    = f.text_field :slug
  .actions
    = f.submit 'Save'
