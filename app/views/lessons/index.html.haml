  -if user_signed_in?
    -poll = current_user.next_unanswered_poll
  -else
    -poll = nil
  = render "polls/poll", :poll => poll, :previous_poll => nil

%h1 All lessons

=render "lessons/future_lessons", :lessons => @lessons

%br

-if admin?
  = link_to 'New Lesson', new_lesson_path
