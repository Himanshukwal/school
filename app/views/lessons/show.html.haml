-provide :left_column do
  .past
    -lesson = @lesson
    %h2 Attendance
    %p
      =lesson.users.count
      People attending
    %ul
      -lesson.users.each do |u|
        %li
          %a=u.name
  .polls
    %h2 Poll: Do you want to learn Onyx on Train on Racks?

.lesson_details
  =render :partial => "lessons/announce", :locals => {:lesson => @lesson, :main_page => false}


%hr

%p#notice= notice

%h2 Whiteboard

-if user_signed_in?
  -if @whiteboard == true
    -link = "http://pad.coshx.com/p/"
    %iframe{:src => "#{link}rails-school-lesson-#{@lesson.id}", :style => "width:100%;height:600px;border:1px solid #CCCCCC;"}
  -else
    .action
      =link_to "Show whiteboard", "#{@lesson.url}/whiteboard", :class => "button secondary"

      %br
      %br
      %br

-else
  Please, sign in to see the Whiteboard

-if 1 == 2
  %p
    %b Title:
    = @lesson.title
  %p
    %b Description:
    = @lesson.description
  %p
    %b Date:
    = @lesson.date
  %p
    %b Address:
    = @lesson.address
  %p
    %b City:
    = @lesson.city
  %p
    %b Course:
    = @lesson.course_id
  %p
    %b User:
    = @lesson.user_id

-if admin?
  = link_to 'Edit', edit_lesson_path(@lesson), :class => 'button'


-provide :meta do
  %meta{:content => "Rails School San Francisco - #{@lesson.title}", :property => "og:title"}/
  %meta{:content => "website", :property => "og:type"}/
  %meta{:content => "http://www.railsschool.org#{@lesson.url}", :property => "og:url"}/
  %meta{:content => "http://www.railsschool.org/assets/logo.png", :property => "og:image"}/
  %meta{:content => "www.railsschool.org", :property => "og:site_name"}/
  %meta{:content => "100000245725293", :property => "fb:admins"}/
  %meta{:content => "442490832470487", :property => "fb:app_id"}/
  %meta{:content => "Rails School San Francisco - #{@lesson.description}", :property => "og:description"}/