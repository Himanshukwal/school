-provide :left_column do
  .past
    -lesson = @lesson
    %h2 Attendance
    %p
      =lesson.users.count
      People attending
    %ul
      -lesson.users.each do |u|
        %li
          %a=u.name
  .polls
    %h2 Poll: Do you want to learn Onyx on Train on Racks?

.head
  .text
    .date
      Next Workshop / 11.12.2012
    %h1=@lesson.title
    .description
      =@lesson.description
    .details
      Free Course / Tuesdays Nov 12th, 7pm-9pm
      %br
      in the Facebookâ€™s Church room (map).
      %br
    =render :partial => "attendances/rsvp", :locals => {:lesson => @lesson}


  .image
    .img-wrap
      .img


%hr

%p#notice= notice

%h2 Whiteboard

-if user_signed_in?
  -if @whiteboard == true
    -link = "http://pad.coshx.com/p/"
    %iframe{:src => "#{link}rails-school-lesson-#{@lesson.id}", :style => "width:100%;height:600px;border:1px solid #CCCCCC;"}
  -else
    .action
      =link_to "Show whiteboard", "#{@lesson.url}/whiteboard", :class => "button secondary"

      %br
      %br
      %br

-else
  Please, sign in to see the Whiteboard

-if 1 == 2
  %p
    %b Title:
    = @lesson.title
  %p
    %b Description:
    = @lesson.description
  %p
    %b Date:
    = @lesson.date
  %p
    %b Address:
    = @lesson.address
  %p
    %b City:
    = @lesson.city
  %p
    %b Course:
    = @lesson.course_id
  %p
    %b User:
    = @lesson.user_id

-if admin?
  = link_to 'Edit', edit_lesson_path(@lesson), :class => 'button'

