%ul.lessons_list
  -lessons.each do |l|
    %li
      .info
        .date
          = format_date l.date
        .text
          =link_to l.title, l.url
        .expand
          %a.expand_lesson{:href => "#", "data-lesson" => l.id} Expand

      .details{"data-lesson" => l.id}
        .summary= l.summary
        %br
        .description
          :markdown
            #{l.description}
        %br
        %br
        %b Address:
        =link_to l.place.name, l.place if l.place.present?
        =l.place.address  if l.place.present?
        =l.place.city if l.place.present?
        =link_to '(map)', l.place if l.place.present?
        .view
          =link_to 'View details...', l
        =render :partial => "attendances/rsvp", :locals => {:lesson => l}
        -if admin?
          = link_to 'Show', l
          = link_to 'Edit', edit_lesson_path(l)
          = link_to 'Destroy', l, method: :delete, data: { confirm: 'Are you sure?' }

-if lessons.count == 0
  %br
  %br
  %br
  There are no workshops
